# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/moonlight-clothing
# For MongoDB Atlas (cloud), use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/moonlight-clothing

